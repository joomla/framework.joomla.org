{% extends 'index.twig' %}

{% block title %}Joomla! Framework Documentation{% endblock %}

{% block content %}
    <div class="d-flex">
        <button class="btn btn-dark d-md-none sidebartoggle" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebar" aria-expanded="false" aria-label="Toggle mainnavigation">Show Navigation</button>
        <div id="sidebar" class="col_sidebar p-4 bg-light bg-gradient border-end flex-lg-shrink-0 sticky-lg-top overflow-auto">
            <nav>
                <h3>Package List</h3>
                <ul class="list-unstyled">
                    {% for package in packages %}
                        {% if package.stable %}
                            <li>
                                <a class="text-decoration-none px-3 py-2 d-block" href="{{ route('docs/latest/' ~ package.package) }}">{{ package.display }}</a>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </nav>
        </div>
        <main class="col_main container">
            <div class="row">
                <div class="col">
                    <h2>We Couldn't Find It</h2>
                    <p class="lead">{{ error }}</p>
                </div>
            </div>
        </main>
    </div>
{% endblock %}
